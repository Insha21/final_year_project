@using Model
@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="layout">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="profile-section">
            <img src="https://via.placeholder.com/80" alt="Doctor Profile" class="profile-pic" />
            <h4>Dr. John Doe</h4>
            <p class="specialization">Cardiologist</p>
            <button class="edit-btn" @onclick='() => Navigation.NavigateTo($"/profile")'>Edit Profile</button>
        </div>

        <nav class="sidebar-nav">
            <button class="side-btn" @onclick='() => Navigation.NavigateTo("/dashboard")'>
                <i class="fas fa-home"></i> Dashboard
            </button>
            <button class="side-btn" @onclick='() => Navigation.NavigateTo("/patients")'>
                <i class="fas fa-users"></i> Patients
            </button>
            <button class="side-btn" @onclick='() => Navigation.NavigateTo("/appointments")'>
                <i class="fas fa-calendar-check"></i> Appointments
            </button>
            <button class="side-btn" @onclick='() => Navigation.NavigateTo("/messages")'>
                <i class="fas fa-envelope"></i> Messages
            </button>
        </nav>

        <button class="logout-btn" @onclick="Logout">
            <i class="fas fa-sign-out-alt"></i> Logout
        </button>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navbar -->
        <header class="top-navbar">
            <h5>Doctor Dashboard</h5>
            <div class="navbar-right">
                <button class="icon-btn"><i class="fas fa-bell"></i></button>
                <button class="icon-btn"><i class="fas fa-cog"></i></button>
            </div>
        </header>

        <!-- Page body -->
        <div class="page-body">
            @Body
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

@code {
    private void Logout()
    {
        Navigation.NavigateTo("/login", true);
    }
}
<style>
    .layout {
        display: flex;
        height: 100vh;
        font-family: Arial, sans-serif;
    }

    /* Sidebar */
    .sidebar {
        width: 250px;
        background: #3b3bbf;
        color: white;
        display: flex;
        flex-direction: column;
        padding: 20px;
    }

    .profile-section {
        text-align: center;
        margin-bottom: 20px;
    }

    .profile-pic {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-bottom: 10px;
        border: 3px solid white;
    }

    .specialization {
        font-size: 14px;
        color: #ddd;
    }

    .edit-btn {
        margin-top: 10px;
        padding: 6px 12px;
        background: white;
        color: #3b3bbf;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
    }

    .sidebar-nav {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 20px;
    }

    .side-btn {
        background: transparent;
        color: white;
        border: none;
        text-align: left;
        padding: 10px;
        font-size: 16px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 10px;
        border-radius: 5px;
        transition: background 0.2s;
    }

        .side-btn:hover {
            background: rgba(255,255,255,0.2);
        }

    .logout-btn {
        margin-top: auto;
        padding: 10px;
        background: #ff4d4d;
        border: none;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .logout-btn:hover {
            background: #e60000;
        }

    /* Main Content */
    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: #f9f9f9;
    }

    /* Top Navbar */
    .top-navbar {
        height: 60px;
        background: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        border-bottom: 1px solid #ddd;
    }

    .icon-btn {
        background: none;
        border: none;
        font-size: 18px;
        color: #3b3bbf;
        margin-left: 15px;
        cursor: pointer;
    }

        .icon-btn:hover {
            color: #2e2e9e;
        }

    /* Page Body */
    .page-body {
        padding: 20px;
        overflow-y: auto;
    }
</style>
<style>
    .stats-section {
        display: flex;
        gap: 20px;
        margin-top: 20px;
    }

    .stat-card {
        flex: 1;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.1);
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .stat-icon {
        font-size: 28px;
        color: #3b3bbf;
    }
</style>
