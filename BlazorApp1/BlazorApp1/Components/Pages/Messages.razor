@page "/usermessages"
@layout UserDashboardLayout
@using BlazorApp1.Components.Layout
@using Model
@inject BlazorApp1.Service.IMService MService

<div class="chat-page">
    <h2>Messages</h2>

    <div class="chat-window">
        <div class="messages">
            @if (messages != null && messages.Any())
            {
                @foreach (var m in messages)
                {
                    <div class="msg @(m.SenderId == "me" ? "me" : "them")">
                        <strong>@m.SenderName</strong>: @m.Text
                        <span class="time">@m.SentAt.ToShortTimeString()</span>
                    </div>
                }
            }
            else
            {
                <p>No messages yet.</p>
            }
        </div>

        <div class="composer">
            <input @bind="outgoing" placeholder="Type a message..." />
            <button @onclick="Send">Send</button>
        </div>
    </div>
</div>

@code {
    private List<Message> messages = new();
    private string outgoing = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadMessages();
    }

    private async Task LoadMessages()
    {
        try
        {
            messages = await MService.GetAllMessagesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading messages: {ex.Message}");
        }
    }

    private async Task Send()
    {
        if (!string.IsNullOrWhiteSpace(outgoing))
        {
            var newMessage = new Message
                {
                    SenderId = "me",
                    SenderName = "You",
                    Text = outgoing,
                    SentAt = DateTime.UtcNow
                };

            try
            {
                await MService.AddMessageAsync(newMessage); // Save to DB
                messages.Add(newMessage); // Update UI
                outgoing = "";
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error sending message: {ex.Message}");
            }
        }
    }
}

<style>
    .chat-page {
        padding: 20px;
    }

    .chat-window {
        background: #fff;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .messages {
        height: 300px;
        overflow-y: auto;
        margin-bottom: 10px;
    }

    .msg {
        margin: 5px 0;
        padding: 8px;
        border-radius: 6px;
    }

        .msg.me {
            background: #e1f5fe;
            text-align: right;
        }

        .msg.them {
            background: #f1f1f1;
        }

    .time {
        font-size: 11px;
        color: #666;
        margin-left: 8px;
    }

    .composer {
        display: flex;
        gap: 10px;
    }

        .composer input {
            flex: 1;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }
</style>
