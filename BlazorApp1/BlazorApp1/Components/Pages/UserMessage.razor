@* @page "/usermessages"
@layout UserDashboardLayout
@using BlazorApp1.Components.Layout
@using Model
@inject IMService MessageService
@inject IJSRuntime JS

<div class="chat-page">
    <h2>💬 Messages</h2>

    <div class="chat-window">
        <div class="messages">
            @if (messages == null)
            {
                <p>Loading messages...</p>
            }
            else if (messages.Count == 0)
            {
                <p>No messages yet. Start the conversation!</p>
            }
            else
            {
                @foreach (var m in messages)
                {
                    <div class="msg @(m.SenderId == currentUserId ? "me" : "them")">
                        <strong>@m.SenderName</strong>: @m.Text
                        <span class="time">@m.SentAt.ToShortTimeString()</span>
                    </div>
                }
            }
        </div>

        <div class="composer">
            <input @bind="outgoing" placeholder="Type a message..." />
            <button @onclick="SendMessage">Send</button>
        </div>
    </div>
</div>

@code {
    private List<Message>? messages;
    private string outgoing = "";
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        // ✅ Get user ID from local storage
        currentUserId = await JS.InvokeAsync<string>("localStorage.getItem", "userId");

        // ✅ Load messages from API
        await LoadMessages();
    }

    private async Task LoadMessages()
    {
        try
        {
            messages = await MessageService.GetAllMessagesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error loading messages: {ex.Message}");
            messages = new();
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(outgoing)) return;

        try
        {
            // ✅ Create message object
            var newMessage = new Message
                {
                    SenderId = currentUserId ?? "user1",
                    SenderName = "You",
                    ReceiverId = "doctor1", // You can replace this dynamically later
                    Text = outgoing,
                    SentAt = DateTime.Now
                };

            // ✅ Save message via API
            await MessageService.AddMessageAsync(newMessage);

            // ✅ Add to chat window immediately
            messages?.Add(newMessage);
            outgoing = "";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error sending message: {ex.Message}");
        }
    }
}

