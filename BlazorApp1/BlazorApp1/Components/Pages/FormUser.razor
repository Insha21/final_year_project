@page "/formuser/{ClientId}"
@using Model
@inject NavigationManager Navigation
@inject IUService UserService

<div class="auth-container">
    <!-- Left Side -->
    <div class="auth-left">
        <h1>User Registration</h1>
        <p>Please fill in your details to create your account</p>
    </div>

    <!-- Right Side -->
    <div class="auth-right">
        <div class="auth-card">
            <EditForm Model="@user" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />

                <!-- Full Name -->
                <div class="form-group">
                    <label>Full Name</label>
                    <InputText class="form-input" @bind-Value="user.Name" placeholder="Enter your full name" />
                    <ValidationMessage For="@(() => user.Name)" class="validation-message" />
                </div>

                <!-- Sex -->
                <div class="form-group">
                    <label>Sex</label>
                    <InputSelect class="form-input" @bind-Value="user.Sex">
                        <option value="">Select Sex</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </InputSelect>
                    <ValidationMessage For="@(() => user.Sex)" class="validation-message" />
                </div>

                <!-- Weight -->
                <div class="form-group">
                    <label>Weight</label>
                    <InputText class="form-input" @bind-Value="user.Weight" placeholder="Enter your weight" />
                    <ValidationMessage For="@(() => user.Weight)" class="validation-message" />
                </div>

                <!-- Height -->
                <div class="form-group">
                    <label>Height</label>
                    <InputText class="form-input" @bind-Value="user.Height" placeholder="Enter your height" />
                    <ValidationMessage For="@(() => user.Height)" class="validation-message" />
                </div>

                <!-- Address -->
                <div class="form-group">
                    <label>Address</label>
                    <InputText class="form-input" @bind-Value="user.Address" placeholder="Enter your address" />
                    <ValidationMessage For="@(() => user.Address)" class="validation-message" />
                </div>

                <button type="submit" class="btn-submit">Register</button>
            </EditForm>
        </div>
    </div>
</div>

