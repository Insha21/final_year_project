@code {
    [Parameter]
    public string? ClientId { get; set; }  // 👈 This will come from the URL (same as Client.Id)

    private int step = 1;
    private User user = new();

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(ClientId))
        {
            user.ClientId = ClientId;  // ✅ Assign existing client ID to doctor
            Console.WriteLine($"✅ Client ID set: {user.ClientId}");
        }
        else
        {
            Console.WriteLine("⚠️ ClientId not found in URL!");
        }
    }

    private void GoToProfessional() => step = 2;

    private async Task HandleSubmit()
    {
        await UserService.AddUserAsync(user);
        Navigation.NavigateTo("/dashboard?submitted=true");
    }
}

